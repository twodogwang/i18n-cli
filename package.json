{
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.29.1+sha512.48dae233635a645768a3028d19545cacc1688639eeb1f3734e42d6d6b971afbf22aa1ac9af52a173d9c3a20c15857cfa400f19994d79a2f626fcc73fccda9bbc",
  "description": "提取项目里的中文，并替换为i18n函数",
  "scripts": {
    "preinstall": "only-allow pnpm",
    "prepare": "husky install",
    "cz": "pnpm changeset-add && cz",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "changeset-add": "changeset add",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm changeset publish"
  },
  "author": "IFreeOvO",
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.11.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "commitizen": "^4.2.5",
    "cz-git": "^1.3.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "only-allow": "^1.1.1",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "mustache@4.2.0": "patches/mustache@4.2.0.patch"
    }
  }
}
